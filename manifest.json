{
    "manifest_version": 2,
  
    "name": "Text-to-Speech Highlighter",
	"permissions": [
        "contextMenus", 
	    "tts",
        "storage",
        "https://docs.google.com/*"
    ],
    "description": "Highlight and right click text to translate/voice!",
    "version": "2.3",
  
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
          "matches": [
            "https://docs.google.com/*"
          ],
          "js": [
            "content.js"
          ],
          "run_at": "document_end"
        }
    ],
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },

    "background": {
        "page": "background.html"
    },

    "commands": {
        "Stop Speech": {
            "suggested_key": {
                "default": "Alt+P",
                "mac": "Command+P"
              },
            "description": "Stops Speech"
        }
    }

}
