{
    "manifest_version": 2,
  
    "name": "Text to Speech Highlighter Plugin",
	"permissions": [
    "contextMenus", 
	"tts"
    ],
    "description": "This extension will (currently only) speak your highlighted text back at you!",
    "version": "1.0",
  
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },

    "icons": {
        "16": "icon.png"
    },

    "background": {
        "page": "background.html"
    }
}