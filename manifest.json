{
    "manifest_version": 2,
  
    "name": "Text-to-Speech Highlighter",
	"permissions": [
    "contextMenus", 
	"tts"
    ],
    "description": "Highlight and right click text to translate/voice!",
    "version": "1.0",
  
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },

    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },

    "background": {
        "page": "background.html"
    }
}